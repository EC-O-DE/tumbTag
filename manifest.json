{
  "manifest_version": 2,

  "name": "TumbTag Tumblr Easy Add Tags",
  "description": "Allows you to add your list of favorite tags in one click.",
  "version": "1.0",

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": [ "http://www.tumblr.com/*", "https://www.tumblr.com/*" ],
      "js": ["content.js"]
    }
  ]
}